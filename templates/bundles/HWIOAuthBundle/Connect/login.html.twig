{% extends 'layout.html.twig' %}

{% block body %}
    <main class="site-main site-background" style="background-image: url({{ asset('img/backgrounds/' ~ background ~ '.jpg') }})">
        <div class="main__inner">
            <div class="container">      
            <section class='login'>
                <div class="login__logo">
                    <img class="login__img" src="{{ asset('/img/astra_logo.png') }}" alt="">
                </div>
                <div class="login__note">
                    <span>Войти с помощью ...</span>
                </div>
                <div class="login__buttons">
                    {% for owner in hwi_oauth_resource_owners() %}
                        <div class="login__button">
                            <a class="login__button_link" href="{{ hwi_oauth_login_url(owner) }}" >
                                <i class="icon icon_{{ owner | trans({}, 'HWIOAuthBundle') }}"></i>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </section>
            </div>
        </div>
    </main>
    {% if error is defined and error %}
        <span>{{ error }}</span>
    {% endif %}

{% endblock body %}
